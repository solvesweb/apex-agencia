---
// src/components/Footer.astro
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const basePath = lang === "es" ? "" : "/en";

const currentYear = new Date().getFullYear();

// Links de navegación
const navigationLinks = [
    { href: `${basePath}/`, label: t("nav.home") },
    {
        href: `${basePath}/${lang === "es" ? "representados" : "represented"}`,
        label: t("nav.represented"),
    },
    {
        href: `${basePath}/${lang === "es" ? "servicios" : "services"}`,
        label: t("nav.services"),
    },
    {
        href: `${basePath}/${lang === "es" ? "agencia" : "agency"}`,
        label: t("nav.agency"),
    },
    {
        href: `${basePath}/${lang === "es" ? "contacto" : "contact"}`,
        label: t("nav.contact"),
    },
];

// Links legales
const legalLinks = [
    { href: "#", label: lang === "es" ? "Privacidad" : "Privacy" },
    { href: "#", label: lang === "es" ? "Términos" : "Terms" },
    { href: "#", label: lang === "es" ? "Cookies" : "Cookies" },
];

// Redes sociales
const socialLinks = [
    { href: "#", icon: "instagram", label: "Instagram" },
    { href: "#", icon: "twitter", label: "Twitter" },
    { href: "#", icon: "linkedin", label: "LinkedIn" },
];
---

<footer class="bg-black border-t border-white/10">
    <div class="mx-auto max-w-7xl px-6 py-16 lg:px-12">
        <!-- Grid principal -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12"
        >
            <!-- Columna 1: Logo + Descripción -->
            <div class="lg:col-span-2">
                <a href={`${basePath}/`} class="flex items-center gap-2 mb-4">
                    <div
                        class="flex h-10 w-10 items-center justify-center rounded-lg bg-linear-to-br from-primary-500 to-primary-600"
                    >
                        <span class="text-xl font-black text-white">A</span>
                    </div>
                    <span class="text-2xl font-bold font-space text-white"
                        >Apex Agency</span
                    >
                </a>
                <p class="text-gray-400 text-sm leading-relaxed max-w-md mb-6">
                    {
                        lang === "es"
                            ? "Representación deportiva de élite para jugadores y entrenadores que buscan alcanzar su máximo potencial en el fútbol profesional."
                            : "Elite sports representation for players and coaches seeking to reach their full potential in professional football."
                    }
                </p>

                <!-- Redes sociales -->
                <div class="flex gap-4">
                    {
                        socialLinks.map((social) => (
                            <a
                                href={social.href}
                                class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/5 text-gray-400 transition-all hover:bg-primary-600 hover:text-white"
                                aria-label={social.label}
                            >
                                {social.icon === "instagram" && (
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                                    </svg>
                                )}
                                {social.icon === "twitter" && (
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                                    </svg>
                                )}
                                {social.icon === "linkedin" && (
                                    <svg
                                        class="w-5 h-5"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                                    </svg>
                                )}
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Columna 2: Navegación -->
            <div>
                <h3
                    class="text-sm font-bold text-white uppercase tracking-wider mb-4"
                >
                    {lang === "es" ? "Navegación" : "Navigation"}
                </h3>
                <ul class="space-y-3">
                    {
                        navigationLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-gray-400 transition-colors hover:text-white"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Columna 3: Legal -->
            <div>
                <h3
                    class="text-sm font-bold text-white uppercase tracking-wider mb-4"
                >
                    Legal
                </h3>
                <ul class="space-y-3">
                    {
                        legalLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-sm text-gray-400 transition-colors hover:text-white"
                                >
                                    {link.label}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>

        <!-- Separador -->
        <div class="border-t border-white/10 pt-8">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4"
            >
                <p class="text-sm text-gray-500">
                    © {currentYear} Apex Agency. {
                        lang === "es"
                            ? "Todos los derechos reservados."
                            : "All rights reserved."
                    }
                </p>
                <p class="text-sm text-gray-500">
                    {lang === "es" ? "Hecho con" : "Made with"}
                    <span class="text-primary-400">♥</span>
                    {lang === "es" ? "por" : "by"}
                    <a
                        href="https://solvesweb.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-primary-400 hover:text-primary-300 transition-colors"
                    >
                        Solves
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>
