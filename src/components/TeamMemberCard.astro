---
// src/components/TeamMemberCard.astro (o team/TeamMemberCard.astro)
import { Image } from "astro:assets";
import type { TeamMember } from "../types/TeamMember";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

interface Props {
    member: TeamMember;
}

const { member } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="group relative overflow-hidden rounded-2xl bg-dark-800">
    <!-- Imagen -->
    <div class="aspect-3/4 overflow-hidden">
        <Image
            src={member.image}
            alt={member.name}
            width={400}
            height={533}
            class="h-full w-full object-cover grayscale transition-all duration-500 group-hover:scale-105 group-hover:grayscale-0"
        />
    </div>

    <!-- Overlay -->
    <div
        class="absolute inset-0 bg-linear-to-t from-black/90 via-black/40 to-transparent"
    >
    </div>

    <!-- Contenido -->
    <div class="absolute inset-x-0 bottom-0 p-6 text-white">
        <h3 class="mb-2 text-2xl font-bold font-space">
            {member.name}
        </h3>
        <p
            class="text-sm text-primary-400 font-medium uppercase tracking-wider"
        >
            {t(`roles.${member.roleKey}`)}
        </p>
    </div>
</div>
