---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import TeamMemberCard from "../../components/TeamMemberCard.astro";
import { team } from "../../data/team";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const basePath = lang === "es" ? "" : "/en";
const contactPath = lang === "es" ? "contacto" : "contact";
---

<Layout>
    <main
        class="min-h-screen bg-dark-900 pb-24 px-6"
        style="padding-top: 160px;"
    >
        <div class="mx-auto max-w-7xl">
            <!-- Header -->
            <div class="mb-20 text-center">
                <h1
                    class="text-5xl md:text-6xl font-bold text-white font-space mb-6"
                >
                    {t("agency.title")}
                </h1>
                <p class="text-xl text-gray-400 max-w-3xl mx-auto">
                    {t("agency.subtitle")}
                </p>
            </div>

            <!-- Misión y Visión -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-24">
                <!-- Misión -->
                <div class="group cursor-default">
                    <div
                        class="border-l-4 border-transparent pl-8 py-6 transition-all duration-300 group-hover:border-primary-500"
                    >
                        <h2
                            class="text-4xl font-bold text-white font-space mb-6 uppercase tracking-tight"
                        >
                            {t("agency.mission.title")}
                        </h2>
                        <p class="text-lg text-gray-400 leading-relaxed">
                            {t("agency.mission.description")}
                        </p>
                    </div>
                </div>

                <!-- Visión -->
                <div class="group cursor-default">
                    <div
                        class="border-l-4 border-transparent pl-8 py-6 transition-all duration-300 group-hover:border-primary-500"
                    >
                        <h2
                            class="text-4xl font-bold text-white font-space mb-6 uppercase tracking-tight"
                        >
                            {t("agency.vision.title")}
                        </h2>
                        <p class="text-lg text-gray-400 leading-relaxed">
                            {t("agency.vision.description")}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Valores -->
            <div class="mb-24">
                <h2
                    class="text-4xl font-bold text-white font-space mb-12 text-center"
                >
                    {t("agency.values.title")}
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Integridad -->
                    <div
                        class="bg-dark-800 p-10 rounded-2xl group hover:bg-dark-700 transition-colors"
                    >
                        <div
                            class="text-7xl font-bold text-primary-500/20 font-space mb-6 group-hover:text-primary-500/30 transition-colors"
                        >
                            01
                        </div>
                        <h3
                            class="text-2xl font-bold text-white font-space mb-3"
                        >
                            {t("agency.values.integrity.title")}
                        </h3>
                        <p class="text-gray-400 leading-relaxed">
                            {t("agency.values.integrity.description")}
                        </p>
                    </div>

                    <!-- Excelencia -->
                    <div
                        class="bg-dark-800 p-10 rounded-2xl group hover:bg-dark-700 transition-colors"
                    >
                        <div
                            class="text-7xl font-bold text-primary-500/20 font-space mb-6 group-hover:text-primary-500/30 transition-colors"
                        >
                            02
                        </div>
                        <h3
                            class="text-2xl font-bold text-white font-space mb-3"
                        >
                            {t("agency.values.excellence.title")}
                        </h3>
                        <p class="text-gray-400 leading-relaxed">
                            {t("agency.values.excellence.description")}
                        </p>
                    </div>

                    <!-- Compromiso -->
                    <div
                        class="bg-dark-800 p-10 rounded-2xl group hover:bg-dark-700 transition-colors"
                    >
                        <div
                            class="text-7xl font-bold text-primary-500/20 font-space mb-6 group-hover:text-primary-500/30 transition-colors"
                        >
                            03
                        </div>
                        <h3
                            class="text-2xl font-bold text-white font-space mb-3"
                        >
                            {t("agency.values.commitment.title")}
                        </h3>
                        <p class="text-gray-400 leading-relaxed">
                            {t("agency.values.commitment.description")}
                        </p>
                    </div>

                    <!-- Innovación -->
                    <div
                        class="bg-dark-800 p-10 rounded-2xl group hover:bg-dark-700 transition-colors"
                    >
                        <div
                            class="text-7xl font-bold text-primary-500/20 font-space mb-6 group-hover:text-primary-500/30 transition-colors"
                        >
                            04
                        </div>
                        <h3
                            class="text-2xl font-bold text-white font-space mb-3"
                        >
                            {t("agency.values.innovation.title")}
                        </h3>
                        <p class="text-gray-400 leading-relaxed">
                            {t("agency.values.innovation.description")}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Equipo -->
            <div class="mb-24">
                <div class="mb-12 text-center">
                    <h2 class="text-4xl font-bold text-white font-space mb-4">
                        {t("team.title")}
                    </h2>
                    <p class="text-xl text-gray-400">
                        {t("team.subtitle")}
                    </p>
                </div>
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    {team.map((member) => <TeamMemberCard member={member} />)}
                </div>
            </div>

            <!-- CTA Final -->
            <div
                class="bg-linear-to-r from-primary-600/10 to-primary-400/10 border border-primary-500/20 rounded-2xl p-12 text-center"
            >
                <h2 class="text-4xl font-bold text-white font-space mb-6">
                    {t("agency.cta.title")}
                </h2>
                <a
                    href={`${basePath}/${contactPath}`}
                    class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary-600 px-8 py-4 text-base font-bold text-white uppercase tracking-wider transition-all hover:bg-primary-500 hover:shadow-lg hover:shadow-primary-500/50"
                >
                    {t("agency.cta.button")}
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </main>
</Layout>
